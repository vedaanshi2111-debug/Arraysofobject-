#include <iostream>
using namespace std;

class Student {
public:
    string name;
    int age;

    void getData() {
        cout << "Enter name: ";
        cin >> name;
        cout << "Enter age: ";
        cin >> age;
    }

    void showData() {
        cout << "Name: " << name << ", Age: " << age << endl;
    }
};

int main() {
    Student s[3];  // Array of 3 Student objects

    cout << "--- Enter student details ---" << endl;
    for (int i = 0; i < 3; i++) {
        cout << "\nStudent " << i + 1 << ":" << endl;
        s[i].getData();
    }

    cout << "\n--- Student Details ---" << endl;
    for (int i = 0; i < 3; i++) {
        s[i].showData();
    }

    return 0;
}
